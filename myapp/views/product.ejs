<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link width="" rel="shortcut icon" href="./images/fondo_pagina.jpeg" />

	<title> Ariel's Jewelry</title>
	<!-- Font Awesome Stylesheet -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
	<!-- Bootstrap Grid Stylesheet -->
	<link rel="stylesheet" href="/css/bootstrap-grid.min.css">
	<!-- Own Stylesheet -->
	<link rel="stylesheet" href="/css/app.css">
</head>
<body>
	<!-- Header -->
	
	<!-- /Header -->
	<% if (user) { %>
		<%- include("partials/headerLogueado.ejs") %>
		<% } else { %>
			<%- include("partials/header.ejs") %>
	<% } %>
	<!-- product detail -->
	<% for( let i = 0; i < 1; i++ ) { %>
		<div class="col-12 col-sm-6 col-lg-3">
			<section class="product-box">
				<a href="/product">
					<figure class="product-box_image">
						<img src="images/<%= productos[i].imagen %>">
					</figure>
					<article class="product-box_data">
						<h2><a href="/product/<%= productos[i].id %>"><%= productos[i].nombre_producto %></a></h2>
						<p><%= productos[i].descripcion%></p>
						<p><%= productos[i].comentarios[i].texto_comentario%></p>
					</article>
				</a>
			</section>
		</div>
	<% } %>
	<!-- /product detail -->

	<!-- footer -->
	<%- include("partials/footer.ejs") %>
	<!-- /footer -->

</body>	
</html>