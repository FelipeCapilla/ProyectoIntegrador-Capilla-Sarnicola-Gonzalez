<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link width="" rel="shortcut icon" href="./images/fondo_pagina.jpeg" />
	
	<title> Ariel's Jewelry</title>
			<!-- Font Awesome Stylesheet -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
	<!-- Bootstrap Grid Stylesheet -->
	<link rel="stylesheet" href="/css/bootstrap-grid.min.css">
	<!-- Own Stylesheet -->
	<link rel="stylesheet" href="/css/app.css">
	<!-- Font -->
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
	<!-- Font del titulo -->
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Ubuntu:ital,wght@0,300;0,400;0,500;0,700;1,300;1,400;1,500;1,700&display=swap" rel="stylesheet">
</head>
<body>
	<!-- Header -->
	<% if (logueado) { %>
		<%- include("partials/headerLogueado.ejs") %>
		<% } else { %>
			<%- include("partials/header.ejs") %>
	<% } %>
	<!-- /Header -->
	
	<!-- Banner -->
	<div class="banner">
		<img src="images/reloj-banner.jpeg" alt="Banner de ofertas">
	</div>
	<!-- /Banner -->

	
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Productos</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% for( let i = 0; i < 4; i++ ) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/product">
							<figure class="product-box_image">
								<img src="images/<%= productos[i].imagen %>">
							</figure>
							<article class="product-box_data">
								<h2><%= productos[i].nombre_producto %></h2>
								<p><%= productos[i].descripcion%></p>
								<p><%= productos[i].comentarios.length%></p>
							</article>
						</a>
					</section>
				</div>
			<% } %>
		</div>
	</div>



	<!-- footer -->
	<%- include("partials/footer.ejs") %>
	<!-- /footer -->
</body>	
</html>